{% extends "::base.html.twig" %}

{% block content %}
    <h1>People</h1>

    <div class="row">
        <div class="col-xs-6">
            {% if prev != null %}
                <a href="{{ prev }}">Previous</a>
            {% else %}
                <p>Previous</p>
            {% endif %}
        </div>
        <div class="col-xs-6">
            {% if next != null %}
                <a href="{{ next }}">Next</a>
            {% else %}
                <p>Next</p>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>First Name</td>
                    <td>Last Name</td>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.first_name }}</td>
                        <td>{{ user.last_name }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}

{% block endjavascripts %}
{% endblock %}